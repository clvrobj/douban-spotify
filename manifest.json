{
  "name": "豆瓣Spotify助手",
  "version": "1.8",
  "description": "帮你从豆瓣专辑转到Spotify收听,是时候清理你的想听清单啦",
  "manifest_version": 2,
  "browser_action": {
      "default_icon": "spotify_16.png",
      "popup": "popup.html",
      "icons": ["spotify_16.png"]
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": [
      "http://music.douban.com/people/*/do*",
      "http://music.douban.com/people/*/wish*",
      "http://music.douban.com/people/*/collect*",
      "http://music.douban.com/subject/*/"
  ],
  "content_scripts": [{
      "matches": ["http://music.douban.com/people/*/do*",
                  "http://music.douban.com/people/*/wish*",
                  "http://music.douban.com/people/*/collect*"],
      "run_at": "document_end",
      "css":["doubanspotify.css"],
      "js": ["jquery-1.7.1.min.js", "page.js"],
      "all_frames": true
    },
    {
      "matches": ["http://music.douban.com/subject/*/"],
      "run_at": "document_end",
      "css":["doubanspotify.css"],
      "js": ["jquery-1.7.1.min.js", "subject.js"],
      "all_frames": true
    }],
  "icons": {
    "16": "spotify_16.png",
    "48": "spotify_48.png"
  }
}